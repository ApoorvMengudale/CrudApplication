@model List<Crud_Application.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="d-flex justify-content-between">
    <h2>User List</h2>
    <div>
        @Html.ActionLink("Create new user", "Create", "User", null, new { @class = "btn btn-primary" })
    </div>
</div>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = user.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No entries found.</p>
}


