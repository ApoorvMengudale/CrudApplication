@model Crud_Application.Models.Entry

<h2>Delete Entry</h2>

<div>
    <h4>Are you sure you want to delete this entry?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Account</dt>
        <dd class="col-sm-10">@Model.Account</dd>

        <dt class="col-sm-2">Narration</dt>
